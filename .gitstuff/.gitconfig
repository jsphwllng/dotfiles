[user]
	name = Joseph Welling
	email = jow@alteos.com
[alias]
	st = status -sb
	cm = commit -m
	gl = config --global -l
	co = checkout
	cl = clone
	statsu = status
	heroku = ! git add . && git commit -m ok && git push heroku && heroku logs --tail
	l = log --pretty=custom
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[core]
	editor = idea
[help]
	autocorrect = 30
[color "branch"]

    current = green bold
    local = green
    remote = yellow

[color "diff"]

    frag = magenta
    meta = yellow

    new = green
    old = red

    newMoved = cyan
    oldMoved = blue

[color "status"]

    added = green reverse
    changed = yellow reverse
    untracked = red reverse

[pretty]

    custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"